<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/add_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:text="Add Course"
        android:textColor="@color/purple_500"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <EditText
        android:id="@+id/add_course_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_design"
        android:hint="Course Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_course_title"

        />

    <EditText
        android:id="@+id/add_course_instructor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_design"
        android:hint="Course Instructor"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_course_name"
        />

    <EditText
        android:id="@+id/add_course_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_design"
        android:hint="Course Time"
        android:inputType="time"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_course_instructor"
        />

    <EditText
        android:id="@+id/add_course_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_design"
        android:hint="Start Date"
        android:inputType="date"
        android:padding="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"

        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/add_course_end_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_course_time"
        />

    <EditText
        android:id="@+id/add_course_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_design"
        android:hint="End Date"
        android:inputType="date"
        android:padding="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"

        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_course_start_date"
        app:layout_constraintTop_toBottomOf="@id/add_course_time"

        />


    <EditText
        android:id="@+id/add_course_description"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_outline"
        android:hint="Description"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_course_start_date"
        />

    <Button
        android:id="@+id/add_opportunity_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/buttons"
        android:clickable="true"
        android:focusable="true"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/add_course_description"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
