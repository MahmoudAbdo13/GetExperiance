<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:layoutDirection="ltr"
        tools:context=".RegisterActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foundation_registration_image"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_add_a_photo_black_24dp" />

            <TextView
                android:id="@+id/foundation_registration_foundation_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_image"
                android:layout_marginStart="28dp"
                android:text="Organization Name"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/foundation_registration_foundation_name_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_foundation_name_txt"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/input_design"
                android:inputType="text"
                android:padding="14dp"
                android:textColorHint="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/foundation_registration_email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_foundation_name_data"
                android:layout_marginStart="28dp"
                android:layout_marginTop="2dp"
                android:text="Email"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/foundation_registration_email_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_email_txt"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/input_design"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textColorHint="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/foundation_registration_password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_email_data"
                android:layout_marginStart="28dp"
                android:layout_marginTop="4dp"
                android:text="Password"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/foundation_registration_passwordTIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_password_txt"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/input_design"
                app:passwordToggleEnabled="true"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp" >

                <EditText
                    android:id="@+id/foundation_registration_password_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_design"
                    android:inputType="textPassword"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="10dp"
                    android:textColorHint="@color/purple_500"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/foundation_registration_confirm_password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_passwordTIL"
                android:layout_marginStart="28dp"
                android:layout_marginTop="4dp"
                android:text="Confirm Password"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/foundation_registration_confirm_passwordTIL"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_below="@id/foundation_registration_confirm_password_txt"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/foundation_registration_confirm_password_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/input_design"
                    android:inputType="textPassword"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="10dp"
                    android:textColorHint="@color/purple_500"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/foundation_registration_phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_confirm_passwordTIL"
                android:layout_marginStart="28dp"
                android:layout_marginTop="4dp"
                android:text="Phone"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/foundation_registration_phone_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_phone_txt"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/input_design"
                android:inputType="phone"
                android:padding="14dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/foundation_registration_address_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_phone_data"
                android:layout_marginStart="28dp"
                android:layout_marginTop="4dp"
                android:text="Address"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/foundation_registration_address_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_address_txt"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/input_design"
                android:inputType="text"
                android:padding="13dp"
                android:textSize="18sp"
                android:textStyle="bold" />


            <!--<TextView
                android:id="@+id/foundation_registration_location_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foundation_registration_city_data"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:text="Location"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/foundation_registration_location_picker"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_below="@id/foundation_registration_location_txt"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/btn_outline"
                android:padding="8dp"
                android:textAlignment="viewStart"
                android:textColor="@color/purple_500"
                app:srcCompat="@drawable/add_location"
                app:tint="@color/purple_500" />

            <TextView
                android:id="@+id/foundation_registration_location_data"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="-29dp"
                android:background="@drawable/btn_outline"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="foundation_registration_location_data"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textAlignment="viewStart"
                android:visibility="gone" />-->

            <Button
                android:id="@+id/foundation_registration_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/foundation_registration_address_data"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="46dp"
                android:background="@drawable/buttons"
                android:text="Registration"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
