<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/bgColor"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        android:background="@drawable/card_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            >

            <TextView
                android:id="@+id/contact_email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:text="Email"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/contact_email_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_email_txt"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/input_design"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="@color/purple_500"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contact_message_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_email_data"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:text="Message"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/contact_message_data"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/contact_message_txt"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_outline"
                android:gravity="top"
                android:hint="Your Message"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textColor="@color/purple_500"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/contact_send_message_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_message_data"
                android:layout_marginStart="84dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/buttons"
                android:clickable="true"
                android:focusable="true"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>