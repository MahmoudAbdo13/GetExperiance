<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Foundation.AddOpportunityFragment"
    >


    <TextView
        android:id="@+id/add_opportunity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:text="Add Opportunity"
        android:textColor="@color/purple_500"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <EditText
        android:id="@+id/add_opportunity_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_design"
        android:hint="Opportunity Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_opportunity_title"

        />

    <Spinner
        android:id="@+id/add_opportunity_type_opportunity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_opportunity_name"
        />

    <Spinner
        android:id="@+id/add_opportunity_field"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_design"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_opportunity_type_opportunity"
        />

    <EditText
        android:id="@+id/add_opportunity_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_design"
        android:hint="Start Date"
        android:inputType="date"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"

        app:layout_constraintEnd_toStartOf="@id/add_opportunity_end_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_opportunity_field"
        />

    <EditText
        android:id="@+id/add_opportunity_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_design"
        android:hint="End Date"
        android:inputType="date"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_opportunity_start_date"
        app:layout_constraintTop_toBottomOf="@id/add_opportunity_field"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"

        />

    <EditText
        android:id="@+id/add_opportunity_days_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/input_design"
        android:hint="Number of days"
        android:inputType="time"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/add_opportunity_hours_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_opportunity_start_date"

        />

    <EditText
        android:id="@+id/add_opportunity_hours_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_design"
        android:hint="Number of hours "
        android:inputType="time"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_opportunity_days_number"
        app:layout_constraintTop_toBottomOf="@id/add_opportunity_end_date"

        />

    <EditText
        android:id="@+id/add_opportunity_description"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_outline"
        android:hint="Description"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_opportunity_days_number"
        />

    <Button
        android:id="@+id/add_opportunity_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/buttons"
        android:clickable="true"
        android:focusable="true"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/add_opportunity_description"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_opportunity_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:text="You must "
            android:textSize="12dp"
            android:textColor="@color/black"
            android:id="@+id/warrnig"

            />
</androidx.constraintlayout.widget.ConstraintLayout>
