<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.getexperience">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="false"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.GetExperiance"
        tools:targetApi="m">
        <activity
            android:name=".Student.StudentActivity"
            android:exported="false"
            android:label="@string/title_activity_sutdent"
            android:theme="@style/Theme.GetExperiance.NoActionBar" />
        <activity
            android:name=".Foundation.OrganizationActivity"
            android:exported="false"
            android:label="@string/title_activity_foundation"
            android:theme="@style/Theme.GetExperiance.NoActionBar" />
        <activity
            android:name=".Manager.AdminActivity"
            android:exported="false"
            android:label="@string/title_activity_admin"
            android:theme="@style/Theme.GetExperiance.NoActionBar" />
        <activity
            android:name=".OuterPages.RestPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".OuterPages.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".OuterPages.ContactUsActivity"
            android:exported="false" />
        <activity
            android:name=".OuterPages.AboutUsActivity"
            android:exported="false" />
        <activity
            android:name=".OuterPages.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".OuterPages.RegistrationActivity"
            android:exported="false" />
    </application>

</manifest>